{
  "name": "@helpers4/helpers4",
  "version": "2.0.0-alpha.3",
  "author": "baxyz <baxy@etik.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/helpers4/helpers4.git"
  },
  "description": "A set of helpers in TS/JS, compatible with tree-shaking, which helps you to manipulate URL, Observable, Promise, ...",
  "keywords": [
    "helper",
    "typescript",
    "tree-shaking",
    "URL",
    "remove-ending-slash",
    "add-leading-slash",
    "extract-pure-uri",
    "string",
    "capitalize",
    "promise",
    "meaningPromiseOrThrow",
    "observable",
    "combine"
  ],
  "license": "AGPL-3.0",
  "scripts": {
    "preinstall": "node -e \"if(!process.env.npm_config_user_agent?.startsWith('bun')){console.log('Use bun as package manager');process.exit(1);}\"",
    "test": "bun test helpers/**/*.test.ts",
    "build": "bun scripts/build/",
    "lint": "echo 'Linting passed' # Add your linter here",
    "typecheck": "tsc --noEmit",
    "coherency": "bun scripts/coherency/",
    "version:patch": "bun scripts/version/version-manager.ts patch",
    "version:minor": "bun scripts/version/version-manager.ts minor",
    "version:major": "bun scripts/version/version-manager.ts major",
    "version:prerelease": "bun scripts/version/version-manager.ts prerelease",
    "version:auto": "bun scripts/version/version-manager.ts --auto",
    "version:auto-dry": "bun scripts/version/version-manager.ts --auto --dry-run",
    "release:patch": "bun scripts/version/release.ts patch",
    "release:minor": "bun scripts/version/release.ts minor",
    "release:major": "bun scripts/version/release.ts major",
    "release:prerelease": "bun scripts/version/release.ts prerelease",
    "release:auto": "bun scripts/version/release.ts --auto",
    "release:dry-run": "bun scripts/version/release.ts patch --dry-run",
    "release:validate": "bun scripts/version/pre-release-validator.ts"
  },
  "type": "module",
  "dependencies": {
    "angular-oauth2-oidc": "^19.0.0",
    "radashi": "^12.4.0",
    "rxjs": "^7.8.2",
    "simple-deepcompare": "^1.0.7"
  },
  "devDependencies": {
    "@happy-dom/global-registrator": "^17.4.4",
    "@types/bun": "^1.2.21",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.3.1",
    "bun-types": "^1.2.21",
    "fs-extra": "^11.3.0"
  },
  "packageManager": "bun@1.2.20"
}